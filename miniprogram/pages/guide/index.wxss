.faq-text.full {
  text-align: left;
}
.page {
  min-height: 100vh;
  padding: 44rpx 28rpx 60rpx;
  box-sizing: border-box;
  background: linear-gradient(180deg, #edf2fb 0%, #f8fafc 100%);
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}


.card {
  background: #ffffff;
  border-radius: 26rpx;
  padding: 38rpx 34rpx;
  box-shadow: 0 14rpx 32rpx rgba(15, 23, 42, 0.08);
  border: 1rpx solid rgba(148, 163, 184, 0.18);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  overflow: hidden;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #0f172a;
  text-align: left;
}

.card-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.tip-list {
  display: flex;
  flex-direction: column;
  gap: 22rpx;
}

.tip-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 28rpx;
  border-radius: 22rpx;
  background: rgba(59, 130, 246, 0.08);
  border: 1rpx solid rgba(37, 99, 235, 0.12);
}

.tip-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.tip-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 14rpx;
  background: linear-gradient(135deg, #2563eb 0%, #4f46e5 100%);
  box-shadow: 0 10rpx 16rpx rgba(37, 99, 235, 0.16);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 600;
}

.tip-icon.shortcut {
  background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
  box-shadow: 0 10rpx 16rpx rgba(34, 197, 94, 0.18);
}

.tip-icon.backup {
  background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
  box-shadow: 0 10rpx 16rpx rgba(234, 88, 12, 0.18);
}

.tip-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #0f172a;
}

.tip-desc {
  font-size: 26rpx;
  color: #475569;
  line-height: 1.72;
}

.step-list {
  display: flex;
  flex-direction: column;
  gap: 26rpx;
}

.step-item {
  display: flex;
  gap: 20rpx;
  align-items: flex-start;
}

.step-item.mini {
  gap: 16rpx;
}


.step-index {
  width: 40rpx;
  height: 40rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #2563eb 0%, #4f46e5 100%);
  color: #ffffff;
  font-size: 20rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 20rpx rgba(37, 99, 235, 0.18);
}

.step-item.mini .step-index {
  width: 38rpx;
  height: 38rpx;
  font-size: 18rpx;
  border-radius: 12rpx;
  box-shadow: 0 8rpx 14rpx rgba(37, 99, 235, 0.16);
}

.step-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  word-break: break-word;
}

.step-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #0f172a;
}

.step-desc {
  font-size: 26rpx;
  color: #475569;
  line-height: 1.72;
  word-break: break-word;
}

.step-desc.multi {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.sub-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-top: 8rpx;
}

.list-item {
  font-size: 26rpx;
  color: #475569;
  line-height: 1.7;
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.list-item.dot {
  position: relative;
  padding-left: 6rpx;
}

.list-item.dot::before {
  content: 'â€¢';
  color: #2563eb;
  font-size: 28rpx;
  line-height: 1.4;
}

.code {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  background: rgba(148, 163, 184, 0.16);
  font-family: 'JetBrains Mono', 'Cascadia Code', monospace;
  font-size: 24rpx;
  color: #0f172a;
  word-break: break-all;
}

.selectable {
  user-select: text;
}

.card-body {
  display: flex;
  flex-direction: column;
  gap: 22rpx;
}

.faq-item {
  padding: 6rpx 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.faq-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #0f172a;
}

.faq-desc {
  font-size: 24rpx;
  color: #475569;
  line-height: 1.7;
}

.faq-placeholder {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 26rpx;
  border-radius: 22rpx;
  background: rgba(148, 163, 184, 0.12);
  color: #475569;
}

.faq-text {
  font-size: 26rpx;
  line-height: 1.7;
}

.bug-card {
  margin-top: 12rpx;
  padding: 18rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(59, 130, 246, 0.08);
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.bug-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1d4ed8;
}

.bug-desc {
  font-size: 24rpx;
  color: #1e293b;
  line-height: 1.7;
  word-break: break-all;
}

.info-block {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.info-paragraph {
  font-size: 26rpx;
  color: #334155;
  line-height: 1.7;
}

.info-contact {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.info-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #0f172a;
  min-width: 80rpx;
}

.info-hint {
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.6;
}

.code.link {
  background: rgba(37, 99, 235, 0.08);
  color: #1d4ed8;
}

.empty {
  font-size: 24rpx;
  color: #94a3b8;
  text-align: center;
  padding: 20rpx 0;
}


.collapsible {
  padding: 0;
  gap: 0;
}

.collapsible .card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 34rpx;
  cursor: pointer;
  border-radius: 26rpx 26rpx 0 0;
}

.collapsible .card-body {
  padding: 0 34rpx 34rpx;
  margin-top: 0;
  border-radius: 0 0 26rpx 26rpx;
}

.card-title.center {
  text-align: center;
}

.card-header .card-title {
  margin: 0;
  text-align: left;
  font-size: 30rpx;
  font-weight: 600;
  color: #0f172a;
  flex: 1;
}


.chevron {
  width: 20rpx;
  height: 20rpx;
  border-right: 4rpx solid #4f46e5;
  border-bottom: 4rpx solid #4f46e5;
  transform: rotate(45deg);
  transition: transform 0.25s ease;
  margin-right: 4rpx;
}

.chevron.expanded {
  transform: rotate(-135deg);
}

.bullet {
  position: relative;
  font-size: 26rpx;
  color: #475569;
  line-height: 1.7;
  padding-left: 30rpx;
  word-break: break-word;
}

.bullet::before {
  content: '';
  position: absolute;
  left: 6rpx;
  top: 16rpx;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #2563eb;
}

.badge {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #2563eb;
  color: #ffffff;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-top: 6rpx;
}

